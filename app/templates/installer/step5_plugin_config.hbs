<div class="panel panel-default">
    <div class="panel-heading">配置Plugin</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">模板</label>
                <div class="col-sm-10">
                    {{view Ember.Select
                        content=templates
                        selectionBinding="template"
                        optionValuePath="content.id"
                        optionLabelPath="content.name"
                        prompt="Pick a template:"
                        class="form-control"}}
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <button class="btn btn-default" {{action 'save_resource'}}>保存</button>
        <button class="btn btn-default" {{action 'close_plugin_config'}}>关闭</button>
    </div>
</div>