<div class="panel panel-default">
    <div class="panel-heading">{{t installer.step5.header}}</div>
    <div class="panel-body">
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            如使用默认集合，可直接下一步。
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">资源列表<a href="javascript:void(0);" onclick="$(this).parent().next().toggle('slow');">显示/隐藏</a> <a href="javascript:void(0);" {{action 'show_resource_form'}}>创建资源</a></div>
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>名称</th>
                            <th>全名</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each resource in resources}}
                        <tr>
                            <td>{{resource.name}}</td>
                            <td>{{resource.fullName}}</td>
                            <td>
                                <a href="javascript:void(0)" {{action 'show_child' resource}}>子资源</a>
                                <a href="javascript:void(0)" {{action 'show_resource_form' resource}}>创建子资源</a>
                                <a href="javascript:void(0)" {{action 'show_plugin_config' resource}}>配置Plugin</a>
                                <a href="javascript:void(0)" {{action 'show_agent_config' resource}}>关联Agent</a>
                                <a href="javascript:void(0)" {{action 'remove_resource' resource}}>移除</a>
                            </td>
                        </tr>
                        {{view App.Step5ChildContainerView resourceBinding='resource'}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{#if show_resource_form}}
        {{view App.Step5ResourceFormView}}
        {{/if}}
        {{#if show_plugin_config}}
        {{view App.Step5PluginConfigView resourceBinding='current_resource'}}
        {{/if}}
        {{#if show_agent_config}}
        {{view App.Step5AgentConfigView}}
        {{/if}}
    </div>
    <div class="panel-footer">
        <button class="btn btn-default" {{action 'prev'}}>{{t common.prev}}</button>
        <button class="btn btn-primary" {{action 'next'}}>{{t common.next}}</button>
    </div>
</div>