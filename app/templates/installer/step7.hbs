<div class="panel panel-default">
    <div class="panel-heading">{{t installer.step7.header}}</div>
    <div class="panel-body">
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            向目标主机安装Agent程序。
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">主机列表</div>
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td data-toggle="popover" {{translateAttr data-original-title="installer.step2.header" data-content="installer.step2.hostPattern.tooltip.content"}}>主机</td>
                            <td width="40%">进度</td>
                            <td>状态</td>
                            <td>{{t common.operate}}</td>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each host in hosts}}
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>{{host.name}}</td>
                            <td>
                                <div class="progress progress-striped" style="margin-bottom: 0;">
                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    </div>
                                </div>
                            </td>
                            <td>{{host.boot_status}}</td>
                            <td>
                                <a href="javascript:void(null);">移除</a>
                            </td>
                        </tr>
                        {{/each}}
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>192.168.1.166</td>
                            <td>
                                <div class="progress progress-striped" style="margin-bottom: 0;">
                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    </div>
                                </div>
                            </td>
                            <td>成功</td>
                            <td>
                                <a href="javascript:void(null);">移除</a>
                            </td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>192.168.1.188</td>
                            <td>
                                <div class="progress progress-striped" style="margin-bottom: 0;">
                                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    </div>
                                </div>
                            </td>
                            <td>失败</td>
                            <td>
                                <a href="javascript:void(null);">移除</a>
                            </td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>192.168.1.188</td>
                            <td>
                                <div class="progress progress-striped active" style="margin-bottom: 0;">
                                    <div class="progress-bar"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    </div>
                                </div>
                            </td>
                            <td>安装中...</td>
                            <td>
                                <a href="javascript:void(null);">移除</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <button class="btn btn-default">删除选中项</button>
                    <button class="btn btn-default">重试失败项</button>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <button class="btn btn-default" {{action 'prev'}}>{{t common.prev}}</button>
        <button class="btn btn-primary" {{action 'next'}}>{{t common.next}}</button>
    </div>
</div>