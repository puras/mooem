<div class="panel panel-default">
    <div class="panel-heading">{{t installer.step3.header}}</div>
    <div class="panel-body">
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            至少导入一种模板!
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">模板列表 <a href="javascript:void(0);" onclick="$(this).parent().next().toggle('slow');">显示/隐藏</a> <a href="javascript:void(0);" {{action 'show_upload'}}>上传</a></div>
            <div class="panel-body">
                <table id="template_list" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>{{t resource.template.name}}</th>
                            <th>{{t resource.template.description}}</th>
                            <th>{{t common.operate}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each template in templates}}
                        <tr>
                            <td>{{template.name}}</td>
                            <td>{{template.description}}</td>
                            <td>
                                <a href="javascript:void(null);" {{action 'show_template' template}}>查看</a>
                                <a href="javascript:void(null);" {{action 'show_child' template}}>子模板</a>
                                {{view App.Step3RemoveTemplateView tempBinding='template'}}
                            </td>
                        </tr>
                        {{view App.Step3ChildContainerView tempBinding='template'}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{#if show_upload}}
        <div id="upload_template" class="panel panel-default">
            <div class="panel-heading">上传模板 <a href="javascript:void(0);" onclick="$(this).parent().next().toggle('slow');">显示/隐藏</a></div>
            <div class="panel-body">
                {{view App.FileUploader}}
            </div>
        </div>
        {{/if}}
        {{#if show_template}}
            {{view App.Step3TemplateDetailView tempBinding='template'}}
        {{/if}}
    </div>
    <div class="panel-footer">
        <button class="btn btn-default" {{action 'prev'}}>{{t common.prev}}</button>
        <button class="btn btn-primary" {{action 'next'}} {{bind-attr disabled="is_submit_disabled"}}>{{t common.next}}</button>
    </div>
</div>