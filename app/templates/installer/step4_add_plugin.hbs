<div class="panel panel-default">
    <div class="panel-heading">增加指标</div>
    <div class="panel-body">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">插件</label>
                <div class="col-sm-10">
                    {{view Ember.Select
                        multiple="true"
                        content=monitors
                        selectionBinding="monitor_plugin"
                        optionValuePath="content.id"
                        optionLabelPath="content.name"
                        class="form-control"}}
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <button class="btn btn-default" {{action 'save_plugin'}}>保存插件</button>
    </div>
</div>